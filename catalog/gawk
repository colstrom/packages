# -*- shell-script -*-

package=(
    name=gawk
    version=4.1.4
    origin=https://ftp.gnu.org/gnu/gawk
    files=(
        gawk-${_.version}.tar.xz
    )
    needs=(
        packages=(
            libiconv
            libsigsegv
        )
    )
)

configure=(
    options=(
        --with-libiconv-prefix=/package/libiconv
        --with-libsigsegv-prefix=/package/libsigsegv
    )
)

build=(
    CPPFLAGS=(
        -D_XOPEN_SOURCE=600
        -D_XPG6
    )
)
