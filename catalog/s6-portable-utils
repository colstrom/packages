
# -*- shell-script -*-

package=(
    name=s6-portable-utils
    version=2.2.1.0
    origin=https://skarnet.org/software/s6-portable-utils
    files=(
        s6-portable-utils-${_.version}.tar.gz
    )
    requires=(
        make_arguments=1
    )
)

configure=(
    options=(
        --enable-absolute-paths
        --with-dynlib=/package/skalibs/lib
        --with-include=/package/skalibs/include
        --with-lib=/package/skalibs/lib/skalibs
        --with-sysdeps=/package/skalibs/lib/skalibs/sysdeps
    )
)

export PATH=/usr/xpg4/bin:${PATH}

make=(
    arguments=(
        "CFLAGS_ALL=${build.CFLAGS[*]}"
    )
)

function __skarnet_patch
{
    set ${GLOBAL_OPTIONS}

    [[ -d ${WORKDIR} ]] || unpack

    cd ${WORKDIR}

    if [[ -x patch-for-solaris ]] && [[ $(uname -s) == SunOS ]]
    then
        ./patch-for-solaris
    fi
}

function patch
{
    __skarnet_patch
    __default_patch
}
