
# -*- shell-script -*-

package=(
    name=augeas
    version=1.8.0
    origin=http://download.augeas.net
    files=(
        augeas-${_.version}.tar.gz
    )
)

configure=(
    options=(
        --enable-shared
        --enable-static
        --with-libpth-prefix=/package/pth
        --with-pic
    )
    arguments=(
        "LIBXML_CFLAGS=-I/package/libxml2/include/libxml2"
        "LIBXML_LIBS=-L/package/libxml2/lib -lxml2"
    )
)
